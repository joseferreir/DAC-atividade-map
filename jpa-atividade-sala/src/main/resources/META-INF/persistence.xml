  <persistence-unit name="jpa-atividade-sala" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifpb.dac.jpa.atividade.sala.cenario1.Funcionario</class>
    <class>br.edu.ifpb.dac.jpa.atividade.sala.cenario1.Projeto</class>
