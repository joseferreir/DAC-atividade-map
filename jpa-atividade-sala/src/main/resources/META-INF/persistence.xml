    <class>br.edu.ifpb.dac.jpa.atividade.sala.cenario1.TrabalhaProjetoPK</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpa-aula-jpa"/>
